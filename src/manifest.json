{
  "name": "MiniMask",
  "description": "Minima Wallet and MEG access extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "./pages/wallet.html",
    "default_icon": "./images/minima.png"
  },
  "background": {
      "service_worker": "service-worker.js"
  },
  "permissions": [	"activeTab", 
  					"scripting",
					"storage"],
  "content_scripts": [
     {
       "matches": ["<all_urls>"],
       "js": ["./pages/generic.js","content-script.js"],
	   "all_frames": true,
	   "run_at": "document_end"
     }
   ],
   "web_accessible_resources": [{
       "resources": ["minimask.js"],
       "matches": ["<all_urls>"]
   }]
}